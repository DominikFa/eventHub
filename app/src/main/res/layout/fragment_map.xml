<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.event_hub.View.MapFragment">

    <!-- Replaced FragmentContainerView with ImageView for static map -->
    <ImageView
        android:id="@+id/iv_static_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_desc_static_map"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_open_in_maps_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/pb_map_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_static_map"
        app:layout_constraintBottom_toBottomOf="@id/iv_static_map"
        app:layout_constraintStart_toStartOf="@id/iv_static_map"
        app:layout_constraintEnd_toEndOf="@id/iv_static_map"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_map_error_or_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/iv_static_map"
        app:layout_constraintBottom_toBottomOf="@id/iv_static_map"
        app:layout_constraintStart_toStartOf="@id/iv_static_map"
        app:layout_constraintEnd_toEndOf="@id/iv_static_map"
        tools:text="Error loading map or location."
        tools:visibility="visible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_in_maps_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/open_in_maps_app_button"
        android:backgroundTint="@color/event_hub_button_purple_gradient_login"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_open_in_new"
        app:iconTint="@android:color/white"
        app:cornerRadius="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>